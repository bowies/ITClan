<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="resume">

<resultMap type="ResumeDTO" id="ManyMap">
	<result property="resumeNum" column="resumeNum"/>
	<result property="resumeName" column="resumeName"/>
	<result property="memberID" column="memberID"/>
	<collection property="resumeList" column="memberID" javaType="List" ofType="PersonalMemberDTO"
				resultMap="resume.ResumeDTOListMap"/>
</resultMap>

<resultMap type="PersonalMemberDTO" id="ResumeDTOListMap">
 <result property="memberID" column="memberID"/>
</resultMap>

<select id="list" parameterType="Map" resultMap="ManyMap">
	select r.memberID, re.resumeNum, re.resumeName
	from personalMember r, resume re
	where r.memberID = re.memberID 
	and r.memberID = #{memberID}
	order by resumeNum ASC
</select>

<select id="total" parameterType="String" resultType="int">
select count(*)
from resume
where memberID = #{memberID}
</select>

<insert id="create" parameterType="ResumeDTO">
insert into resume (resumeNum, memberID, resumeName)
	values ((select nvl(max(resumeNum),0)+1 from resume), #{memberID}, #{resumeName})
</insert>


<delete id="delete" parameterType="int">
delete from resume
where resumeNum = #{resumeNum}
</delete>

<delete id="deleteinfo" parameterType="String">
delete from resume
where memberID = #{memberID}
</delete>
</mapper>